extends ../_bootstrap
append styles
	// Bootstrap theme
	+bootswatch("cerulean")
	// Custom styles for this template
block body
	// Fixed navbar
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				
				a.navbar-brand(href='/login') Войти
				a.navbar-brand(href='/registration', class='solid_top_link') Подать заявку

			#navbar.navbar-collapse.collapse
					
	.container.theme-showcase(role='main')
		.jumbotron
			h1 Лунная программа ЦУП
			p У нас лучшие туры на Луну! Количество мест ограничено, спешите подать заявку!

			ul.tour_wrapper
				each val in tours
					li.tour_title: = val.name

